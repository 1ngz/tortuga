<!Doctype html>

<html>

<head>
  <title>토투가</title>
</head>
<link rel='stylesheet' type="text/css" href="../css/style.css">
<style>
  #container {
    width: 50%;
    margin-left: 25%;
    margin-top: 25px;

    height: 300px;

    display: flex;
    flex-direction: column;

    overflow-y: hidden;
  }

  .product {
    height: 50px;
    background-color: rgba(0, 0, 0, 0.3);
    border: 1px solid rgba(255, 255, 255, 0.2);
    color: black;
    font-size: 16pt;
    text-align: left;
    margin-bottom: 1px;
  }

  .product:hover {
    color: white;
  }

  .product div {
    border: 1px solid black;
    width: 100%;
    height: 100px;
    color: white;
  }



  .additional {
    background-color: rgba(0, 0, 0, 0.5);
    color: white;

    height: 40px;
  }

  .additional button {
    background-color: rgba(0, 0, 0, 0.5);
    color: white;
    border: 0.2px solid rgba(255, 255, 255, 0.2);
    width: 25%;
    height: 90%;

  }
</style>
<script>
  window.onload = function () {
    let pd = document.getElementsByClassName('product');
    //버튼 삭제를 어떻게 할까..
    for (let i = 0; i < pd.length; i++) { //클래스로 지정하면 각각 해당 사항을 다 지정해줘야함.

      pd[i].onclick = function () {
        const node = document.createElement('div'); //요소 생성
        node.setAttribute('class', 'additional');

        const btnbuy = document.createElement('button');
        node.setAttribute('onclick', `location.href='/buy/buythings'`);
        //node.setAttribute('method', `post`);
        const btn2 = document.createElement('button');
        const btn3 = document.createElement('button'); //요소 생성

        const btntxt1 = document.createTextNode('구매');
        const btntxt2 = document.createTextNode('몰랑');
        const btntxt3 = document.createTextNode('그냥버튼'); //텍스트 생성

        btnbuy.appendChild(btntxt1);
        btn2.appendChild(btntxt2);
        btn3.appendChild(btntxt3);

        node.appendChild(btnbuy);
        node.appendChild(btn2);
        node.appendChild(btn3); //요소 + 텍스트

        const criteriaItem = document.getElementsByName(`product${i+1}`);

        pd[i].parentNode.insertBefore(node, criteriaItem[0]);

      }
    };
  }
</script>

<body>
  <section>
    <h2>상 품 리 스 트</h2>
    <%-list%>
    </div>
  </section>
</body>

</html>